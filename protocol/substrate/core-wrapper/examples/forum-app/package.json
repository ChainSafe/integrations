{
  "name": "forum-app",
  "description": "A forum app backed by a blockchain",
  "version": "0.0.1",
  "license": "(MIT AND Apache-2.0)",
  "scripts": {
    "codegen": "npx polywrap app codegen -g wrap",
    "build:app": "wasm-pack build --release --target web",
    "build": "yarn codegen && yarn build:app && cp -r ./pkg ./dist/",
    "start": "yarn build && parcel index.html"
  },
  "devDependencies": {
    "parcel-bundler": "~1.12.5",
    "@types/jest": "27.0.2",
    "@polywrap/client-js": "0.2.0",
    "@polywrap/test-env-js": "0.2.0",
    "jest": "27.0.6",
    "ts-jest": "27.0.4",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "polywrap": "0.2.0",
    "@polywrap/ipfs-plugin-js": "0.2.0"
  }
}
