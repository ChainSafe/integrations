{
  "name": "seed-content",
  "description": "put initial content to the forum app",
  "version": "0.0.1",
  "license": "(MIT AND Apache-2.0)",
  "scripts": {
    "copy:post": "cp -r ./pkg ./dist",
    "copy:pre": "cp ../forum-app/index.ts . && cp ../forum-app/webpack.config.js . && cp ../forum-app/signer.ts .",
    "build:wasm": "wasm-pack build --release --target web  && yarn copy:post",
    "build:webpack": "webpack --config webpack.config.js",
    "build:parcel": "parcel build index.ts -o index.js",
    "build:all": "yarn build:wasm && yarn build:webpack && yarn build:parcel",
    "start": "yarn build:all && parcel serve -p 2222 index.html"
  },
  "devDependencies": {
    "@polywrap/client-js": "0.2.0",
    "@polywrap/test-env-js": "0.2.0",
    "@types/jest": "27.0.2",
    "parcel-bundler": "~1.12.5",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@polkadot/extension-dapp": "^0.44.6",
    "@polkadot/util-crypto": "^10.1.6",
    "@polywrap/ens-resolver-plugin-js": "0.2.0",
    "@polywrap/ethereum-plugin-js": "0.2.0",
    "@polywrap/ipfs-plugin-js": "0.2.0",
    "polywrap": "0.2.0",
    "webpack": "^5.74.0"
  }
}
